# ==========================
# Cellule 1 : Importations
# ==========================
import numpy as np
import matplotlib.pyplot as plt
import sys
sys.path.append("../src")

from MonteCarlo_reliability import simulate_machine
from analytical_reliability import analytical_reliability

# ==========================
# Cellule 2 : Paramètres d'étude
# ==========================
lambda_M1 = 0.002
lambda_M2 = 0.003
lambda_M3 = 0.0015

t_values = np.linspace(0, 500, 50)  # Étude de 0 à 500 heures

# ==========================
# Cellule 3 : Fiabilité d'UNE machine
# ==========================
R_mc = []  # Monte Carlo
R_th = []  # Théorique

for t in t_values:
    R_mc.append(simulate_machine(lambda_M1, t))
    R_th.append(analytical_reliability(lambda_M1, t))

# ==========================
# Cellule 4 : Graphique pour UNE machine
# ==========================
plt.figure(figsize=(8,5))
plt.plot(t_values, R_mc, label="Monte Carlo")
plt.plot(t_values, R_th, linestyle="--", label="Théorique")
plt.xlabel("Temps (h)")
plt.ylabel("Fiabilité R(t)")
plt.title("Fiabilité d'une machine")
plt.legend()
plt.grid(True)
plt.show()

# ==========================
# Cellule 5 : Fiabilité du système en série
# ==========================
lambdas = [lambda_M1, lambda_M2, lambda_M3]

R_series = []
for t in t_values:
    R = 1
    for lam in lambdas:
        R *= analytical_reliability(lam, t)
    R_series.append(R)

# ==========================
# Cellule 6 : Graphique système
# ==========================
plt.figure(figsize=(8,5))
plt.plot(t_values, R_series, marker='o')
plt.xlabel("Temps (h)")
plt.ylabel("Fiabilité du système")
plt.title("Fiabilité du système en série")
plt.grid(True)
plt.show()

